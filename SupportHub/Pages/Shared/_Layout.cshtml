<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SupportHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SupportHub.styles.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Barra superior fija -->
    <nav class="navbar navbar-dark fixed-top">
        <div class="container-fluid">

            <!-- Menú hamburguesa a la izquierda -->
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Logo en lugar del texto SupportHub -->
            <a class="navbar-brand" asp-area="" asp-page="/Index">
                <img src="/imagenes/logoSupportHub1.png" alt="SupportHub Logo">
            </a>
            <!-- acordeón para mostrar los datos de Mi Información -->
            <div style ="width:25px;margin:1px;">
                 <div class="dropdown custom-dropdown" >
                <!-- Botón que actúa como el select -->
                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                </button>

                <!-- Lista de opciones del select simulado -->
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="width: 25px;">
                    <!-- Opciones con etiquetas <i> e iconos -->
                    <li class="dropdown-item">
                        <a href="/Usuario/mi_informacion">
                            <i class="bi bi-info-circle" title="Información"></i>
                        </a>
                    </li>
                    <li class="dropdown-item">
                        <a href="#configuracion">
                            <i class="bi bi-gear" title="Configuración"></i>
                        </a>
                    </li>
                    <li class="dropdown-item">
                        <a href="#mensajes">
                            <i class="bi bi-envelope" title="Mensajes"></i>
                        </a>
                    </li>
                </ul>
            </div>
            </div>
            <div class="ms-auto d-flex align-items-center">
                <a href="#" id="toggle-theme" class="btn btn-outline-light ms-2">
                    <i class="fas fa-moon"></i>
                </a>

                <a href="/login" class="btn btn-outline-light">Login</a>
            </div>
            
        </div>
    </nav>

    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Menú lateral con offcanvas -->
    <div class="offcanvas offcanvas-start text-white" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
        <div class="offcanvas-header">
            <a class="navbar-brand" asp-area="" asp-page="/Index">
                <img src="/imagenes/logoSupportHub1.png" alt="SupportHub Logo">
            </a>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-user-tie"></i> Empleado
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-box-open"></i> Entrega
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-page="/Proveedor/mostrarProveedor">
                        <i class="fas fa-truck"></i> Proveedor
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-desktop"></i> Equipo
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-users-cog"></i> Usuario
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Contenido principal -->
    <div class="container mt-5 hora">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SupportHub - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/scriptPantalla.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
